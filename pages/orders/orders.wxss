/* pages/orders/orders.wxss */
.active {
  border-bottom: 6rpx solid #333; 
}
.or-img {
  width: 248rpx;
  height: 160rpx;
  background: #eee;
}
.item-price {
  margin-top: 54rpx;
}
.item-status {
  position: absolute;
  top: 30rpx;
  font-size: 32rpx;
  color: #333;
  right: 40rpx;
}
.item-pay {
  padding: 16rpx 32rpx;
  border-radius: 50rpx;
  color: #fff;
  background: #39E9D0;
  position: absolute;
  right: 32rpx;
  bottom: 16rpx;
  font-size: 24rpx;
}
.item-cancel {
  padding: 14rpx 30rpx;
  border-radius: 50rpx;
  color: #39E9D0;
  background: #fff;
  position: absolute;
  right: 212rpx;
  bottom: 16rpx;
  font-size: 24rpx;
  box-sizing: border-box;
  border: 2rpx solid #39E9D0;
}
.lh16 {
  line-height: 36rpx;
  vertical-align:-2rpx;
  margin-left: 4rpx;
}
.pay-panel {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, .35);
}
.panel-body {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  height: 750rpx;
}
.cancle-icon {
  font-size: 48rpx;
  line-height: 1;
  position: absolute;
  left: 40rpx;
  top: 26rpx;
  color: #666666;
}
.top-title {
  width: 100%;
  text-align: center;
  font-size: 36rpx;
  line-height: 36rpx;
  color: #000000; 
  padding:33rpx 0;
  border-bottom: 2rpx solid #EEEEEE;
}
.top-icon {
  position: absolute;
  right: 36rpx;
  top: -130rpx;
  width: 164rpx;
  height: 134rpx;
}
.top-icon image {
  height: 100%;
  width: 100%;
}
.price {
  font-size: 70rpx;
  line-height: 1;
  padding: 34rpx 0;
  text-align: center;
}
.confirm-pay {
  position: absolute;
  bottom: 40rpx;
  left: 32rpx;
  right: 32rpx;
  background: #09BB07;
  border-radius: 50rpx;
  height: 96rpx;
  line-height: 96rpx;
  color: #fff;
  font-size: 36rpx;
  text-align: center;
}
.pay-type {
  padding: 0 15rpx;
}
.pay-type image {
  width: 730rpx;
  height: 60rpx;
}
