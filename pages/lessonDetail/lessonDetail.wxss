/* pages/lessonDetail/lessonDetail.wxss */
.top-box {
  height: 480rpx;
  position: relative
}
.lesson-title {
  padding-top: 80rpx;
  color: #fff;
  line-height: 1;
}
.study-num {
  margin-top: 20rpx;
  color: #fff;
  margin-bottom: 50rpx;
}
.bg-img {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-size: 100% 100%;
  /* opacity:0.4; */
}
.z100 {
  z-index: 100;
  position: absolute;
  top: 0;
  left: 0;
  height: 480rpx;
  background: rgba(0, 0, 0, .2);
}
.btn-add {
  margin: 0 30rpx;
  color: #fff;
  background: #59C5B6;
  border-radius: 50rpx;
  margin-top: 30rpx;
  padding: 20rpx 0;
  display: block;
}
.pr100 {
  padding-right: 100rpx;
}
.dactive {
  border-bottom: 4rpx solid #333;
}
.item-img {
  width: 200rpx;
  height: 120rpx;
  background: #ccc;
}