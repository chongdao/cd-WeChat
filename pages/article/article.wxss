/* pages/article/article.wxss */
.article-box {
  width: 702rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  background: #fff;
  position: relative;
  border-radius: 10rpx; 
  padding-bottom: 20rpx;
}
.article-title {
  font-size: 40rpx;
  color: #fff;
  position: absolute;
  top: 76rpx;
  right: 30rpx;
  text-align: right;
}
.btf {
  border-bottom: 2rpx solid #fff;
  padding: 8rpx 0; 
}
.pd3 {
  padding: 6rpx 0;
}
.txts {
  text-shadow: 2rpx 2rpx 3rpx;
}
.article-img {
  width: 100%;
  height: 314rpx;
  background: #ccc;
}
.article-subtile {
  margin: 20rpx;
  color: #666;
  font-size: 32rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  box-sizing: border-box;
  width: 576rpx;
  line-height: 36rpx;
}
.collect-icon {
  width: 36rpx;
  height: 36rpx;
  margin-top: 20rpx;
}
.article-tag {
  font-size: 20rpx;
  color: #BEBEBE;
  flex: 1;
  box-sizing: border-box;
  text-align: right;
  padding-right: 20rpx;
  line-height: 44rpx;
}
.article-author {
  margin-top: 20rpx;
  display: flex;
}
.article-author-img {
  width: 44rpx;
  height: 44rpx;
  margin-right: 30rpx;
  border-radius: 44rpx;
  background: #ccc;
  margin-left: 20rpx;
}
.article-author-name {
  height: 44rpx;
  font-size: 24rpx;
  color: #333;
  flex: 1;
  line-height: 44rpx;
}