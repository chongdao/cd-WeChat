/* pages/article/article.wxss */
.article-box {
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  background: #fff;
}
.article-title {
  font-size: 38rpx;
  color: #333;
  margin-bottom: 20rpx;
}
.article-img {
  width: 100%;
  height: 200rpx;
}
.article-subtile {
  margin: 20rpx 0 15rpx;
  color: #666;
  font-size: 32rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.article-tag {
  font-size: 28rpx;
  color: #999;
}
.article-author {
  margin-top: 20rpx;
}
.article-author-img {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  vertical-align: center;
}
.article-author-name {
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  vertical-align: center;
  font-size: 30rpx;
  color: #ccc;
}