    <view class='flex1 pt5 pb5 fz14 tr'>基础</view>
  </view>
  <view class='flex wd100 pt15 pb15 bgf fw col3 fz16'>
    <view class='flex1 tr borBox pr100' data-type='list' bindtap='changeCategory'>
      <view class="inline pb5 {{category=='list'? 'dactive' : ''}}">目录</view>
    </view>
    <view class='flex1 tl borBox pl10' data-type='detail' bindtap='changeCategory'>
      <view class="inline pb5 {{category=='detail'? 'dactive' : ''}}">详细步骤</view>
    </view>
  </view>
  <block wx:if="{{category=='list'}}" class=''>
    <view class='borBox wd100 bgf'>
      <view class='flex borBox pr20 pl20'>
        <view class='flex1 pt10 pb10 fz16 fw'>社交</view>
        <view class='flex1 tr pt10 pb10 fz16 fw '>3小节</view>
      </view>
      <view class='flex borBox pr20 pl20 pt15 pb20' wx:for="{{drillList}}" wx:key="key"  wx:for-index="index" wx:for-item="item">
        <view class='dr-item-img'></view>
        <view class='pl15 borBox col3 fz16' >
          <view class='pt5 pb5'>跟第一次见面的人和平相处</view>
          <view class='pt5 pb5'>20"</view>
