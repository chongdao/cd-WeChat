  <view class='flex wd100 bgf pt5 borBox pl10 pr10 col9'>
    <view class='flex1 pt5 pb5 fz14'>训练</view>
    <view class='flex1 pt5 pb5 fz14 tc'>平均</view>
    <view class='flex1 pt5 pb5 fz14 tr'>难度</view>
